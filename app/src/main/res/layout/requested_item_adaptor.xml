<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/requested_service_name_text"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            />

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/requested_service_price_text"
            android:text="price"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/requested_service_name_text"
            android:layout_marginTop="15dp"
            android:layout_marginStart="50dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/requested_service_status_text"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="pending"
            android:textSize="16sp"
            android:layout_toEndOf="@id/requested_service_price_text"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/yellow"
            android:gravity="center"
            android:background="@drawable/pending_border"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>